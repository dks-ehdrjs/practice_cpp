#include<iostream>

using namespace std;

void selectionSort(int* arr, int size);

int main() {
	int arr[5] = { 3, 1, 4, 1, 5  };
	selectionSort(arr, 5);

	for (int n : arr) {
		cout << n << " ";
	}
}

void selectionSort(int* arr, int size){
	int i, j, minIdx, tmp;

	for (i = 0; i < size - 1; i++){ // 정렬의 기준
		minIdx = i;  // 인덱스 0부터 시작
		for (j = i + 1; j < size; j++){ // 정렬의 기준 인덱스를 제외한 나머지 인덱스들과 비교
			if (arr[minIdx] > arr[j]) // minIdx보다 작은 값이 존재하면
				minIdx = j; // 그 작은 값을 저장
		}
		tmp = arr[i];
		arr[i] = arr[minIdx];
		arr[minIdx] = tmp; // minIdx와 arr[i]의 값 바꾸기
	}
}
